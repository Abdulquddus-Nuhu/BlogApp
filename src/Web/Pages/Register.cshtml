@page
@model Web.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "_Blog";
}

<!-- Main -->
<main class="container center-screen">
    <article class="grid">
        <div>
            <hgroup>
                <h1>Sign in</h1>
            </hgroup>
            <form>
                <input type="text" name="email" placeholder="Email" aria-label="Login" autocomplete="nickname" required>
                <input type="password" name="password" placeholder="Password" aria-label="Password" autocomplete="current-password" required>
                <fieldset>
                    <label for="remember">
                        <input type="checkbox" role="switch" id="remember" name="remember">
                        Remember me
                    </label>
                </fieldset>
                <button type="submit" class="contrast" onclick="event.preventDefault()">Login</button>
            </form>
        </div>
    </article>
</main><!-- ./ Main -->

<style>
    .center-screen {
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        min-height: 100vh;
    }
</style>