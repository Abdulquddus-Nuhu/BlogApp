@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "_Blog";
}

<div class="container-md w-50 py-5 my-2 bg-body-tertiary px-4">
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h1 class="text-center display-4">Register</h1>
        <div class="form-group">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="mb-3">
                <label for="Firstname" class="form-label">Firstname</label>
                <input asp-for="Input.FirstName" type="text" class="form-control" placeholder="Firstname" aria-label="Firstname" autocomplete="Firstname" required>
            </div>
            <div class="mb-3">
                <label for="LastName" class="form-label">LastName</label>
                <input asp-for="Input.LastName" type="text" class="form-control" placeholder="LastName" aria-label="LastName" autocomplete="LastName" required>
            </div>
            <div class="mb-3">
                <label for="Email" class="form-label">Email</label>
                <input asp-for="Input.Email" type="Email" class="form-control" placeholder="Email" aria-label="Email" autocomplete="Email" required>
            </div>
            <div class="mb-3">
                <label for="Password" class="form-label">Password</label>
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password" aria-label="Password" autocomplete="Password" required>
            </div>
            <div class="mb-4">
                <label for="ConfirmPassword" class="form-label">Confirm Password</label>
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" aria-label="ConfirmPassword" autocomplete="ConfirmPassword" required>
            </div>
            <button type="submit" class="btn btn-primary w-100 py-2">Register</button>
        </div>
    </form>
    <div class="sign-in-form__divider left-right-divider pt-2 pb-3 text-center">
        <span class="badge rounded-pill text-bg-secondary my-1">Or</span>
    </div>
    @{
        if ((Model.ExternalLogins?.Count ?? 0) != 0)
        {
            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div class="form-group">
                    <p>
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="btn btn-primary mr-2 mb-2 w-100 py-2" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account"><i class="fa-brands fa-twitter mr-2"></i>@provider.DisplayName</button>
                        }
                    </p>
                </div>
            </form>
        }
    }
</div>



<style>
    .center-screen {
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        min-height: 80vh;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



