@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "_Blog";
}

<div class="container-md w-50 py-5 my-5 bg-body-tertiary px-4">
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="text-primary-subtle">
        <h1 class="text-center display-4">Log in</h1>
        <div class="form-group">
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Email</label>
                <input asp-for="Input.Email" type="text" class="form-control" placeholder="Email" aria-label="Login" autocomplete="nickname" required>
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Password</label>
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password" aria-label="Password" autocomplete="current-password" required>
            </div>
            <div class="mb-3 form-check">
                <input asp-for="Input.RememberMe" type="checkbox" class="form-check-input" id="remember">
                <label class="form-check-label" for="remember">Remember me</label>
            </div>
            <button type="submit" class="btn btn-primary w-100 py-2">Login</button>
        </div>
    </form>
    <div class="sign-in-form__divider left-right-divider pt-2 pb-3 text-center">
            <span class="badge rounded-pill text-bg-secondary my-1">Or</span>
    </div>
    @{
        if ((Model.ExternalLogins?.Count ?? 0) != 0)
        {
            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div class="form-group">
                    <p>
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="btn btn-primary mr-2 mb-2 w-100 py-2" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account"><i class="fa-brands fa-twitter mr-2"></i>@provider.DisplayName</button>
                        }
                    </p>
                </div>
            </form>
        }
    }
<div>
    <p class="">
        <a id="forgot-password" asp-page="./ForgotPassword" class="link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover">Forgot your password?</a>
    </p>
    <p class="">
        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover">Register as a new user</a>
    </p>
    <p class="">
        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover">Resend email confirmation</a>
    </p>
</div>
</div>


<style>
    .center-screen {
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        min-height: 80vh;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



